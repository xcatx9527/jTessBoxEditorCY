<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import net.sourceforge.tessboxeditor.control.ImageCanvas?>

<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.CheckBox?>
<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.sourceforge.tessboxeditor.BoxEditorKeyEventController">
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="btnOpen" mnemonicParsing="false" onAction="#handleAction" text="打开">
                    <tooltip>
                        <Tooltip text="Open Image File"/>
                    </tooltip>
                </Button>
                <Button fx:id="btnSave"  mnemonicParsing="false" onAction="#handleAction" text="保存">
                    <tooltip>
                        <Tooltip text="Save Box File"/>
                    </tooltip>
                </Button>
                <Button fx:id="btnReload" mnemonicParsing="false" onAction="#handleAction" text="重载">
                    <tooltip>
                        <Tooltip text="Reload Box File"/>
                    </tooltip>
                </Button>
                <Button fx:id="btnReloadTxT" mnemonicParsing="false" onAction="#handleAction" text="重载txt"/>
                <Label text="预览"/>
                <CheckBox fx:id="cbCansee" selected="true"/>
                <Region prefWidth="100.0"/>
                <Button fx:id="btnMerge" mnemonicParsing="false" onAction="#handleAction" text="合并">
                    <tooltip>
                        <Tooltip text="Merge Boxes"/>
                    </tooltip>
                </Button>
                <Button fx:id="btnSplit" mnemonicParsing="false" onAction="#handleAction" text="拆分">
                    <tooltip>
                        <Tooltip text="Split a Box"/>
                    </tooltip>
                </Button>
                <Button fx:id="btnInsert" mnemonicParsing="false" onAction="#handleAction" text="插入">
                    <tooltip>
                        <Tooltip text="Insert a Box"/>
                    </tooltip>
                </Button>
                <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleAction" text="删除">
                    <tooltip>
                        <Tooltip text="Delete Box(es)"/>
                    </tooltip>
                </Button>
                <Region prefWidth="50.0"/>
                <Label text="列间隔"/>
                <TextField fx:id="textww" editable="true" prefWidth="75.0" text="25" />
                <Label text="行间隔"/>
                <TextField fx:id="texthh" editable="true" prefWidth="75.0" text="36"/>
                <Label text="行差"/>
                <TextField fx:id="textPlus" editable="true" prefWidth="75.0" text="0" />
                <Button fx:id="btnGetData" mnemonicParsing="false" onAction="#handleAction" text="获取行列间距"/>
                <Button fx:id="btnClearUp" mnemonicParsing="false" onAction="#handleAction" text="整理"/>
                <Button fx:id="btnMovLeft" mnemonicParsing="false" onAction="#handleAction" text="整体左移"/>
                <Button fx:id="btnMovRight" mnemonicParsing="false" onAction="#handleAction" text="整体右移"/>
                <Button fx:id="btnMovUp" mnemonicParsing="false" onAction="#handleAction" text="整体上移"/>
                <Button fx:id="btnMovBottom" mnemonicParsing="false" onAction="#handleAction" text="整体下移"/>

                <Label fx:id="labelCharacter" text="字符"/>
                <TextField fx:id="tfCharacter" onAction="#handleAction" prefWidth="50.0"/>
                <Button fx:id="btnConvert" mnemonicParsing="false" onAction="#handleAction">
                    <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@icons/tools.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Convert NCR and Escape Sequence to Unicode"/>
                    </tooltip>
                </Button>
                <Label text="X"/>
                <Spinner fx:id="spinnerX" editable="true" prefWidth="60.0">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="5000" min="0"/>
                    </valueFactory>
                </Spinner>
                <Label text="Y"/>
                <Spinner fx:id="spinnerY" editable="true" prefWidth="60.0">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="5000" min="0"/>
                    </valueFactory>
                </Spinner>
                <Label text="W"/>
                <Spinner fx:id="spinnerW" editable="true" prefWidth="60.0">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="500" min="0"/>
                    </valueFactory>
                </Spinner>
                <Label text="H"/>
                <Spinner fx:id="spinnerH" editable="true" prefWidth="60.0">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory initialValue="0" max="500" min="0"/>
                    </valueFactory>
                </Spinner>
                <Button fx:id="btnMarkEOL" mnemonicParsing="false" onAction="#handleAction" text="Mark EOL"
                        visible="false">
                </Button>
                <Button fx:id="btnMarkEOLBulk" mnemonicParsing="false" onAction="#handleAction" text="Mark EOL Bulk"
                        visible="false">
                </Button>
            </items>
        </ToolBar>
    </top>
    <center>
        <SplitPane fx:id="spBoxImage" dividerPositions="0.4" prefHeight="160.0" prefWidth="200.0"
                   BorderPane.alignment="CENTER">
            <items>
                <AnchorPane maxWidth="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="500.0">
                    <children>
                        <TabPane fx:id="tabPane" prefHeight="104.0" prefWidth="92.0" tabClosingPolicy="UNAVAILABLE"
                                 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                 AnchorPane.topAnchor="0.0">
                            <tabs>
                                <Tab text="Box 坐标">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <BorderPane fx:id="bp_container" prefHeight="75.0" prefWidth="92.0"
                                                            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <center>
                                                        <TableView fx:id="tableView" editable="true" prefHeight="75.0"
                                                                   prefWidth="259.0" BorderPane.alignment="CENTER">
                                                            <columns>
                                                                <TableColumn fx:id="tcNum" editable="false"
                                                                             prefWidth="50.0" sortable="false"/>
                                                                <TableColumn fx:id="tcChar" prefWidth="50.0"
                                                                             sortable="false" text="Char"/>
                                                                <TableColumn fx:id="tcX" editable="false"
                                                                             prefWidth="50.0" sortable="false"
                                                                             text="X"/>
                                                                <TableColumn fx:id="tcY" editable="false"
                                                                             prefWidth="50.0" sortable="false"
                                                                             text="Y"/>
                                                                <TableColumn fx:id="tcWidth" editable="false"
                                                                             prefWidth="50.0" sortable="false"
                                                                             text="Width"/>
                                                                <TableColumn fx:id="tcHeight" editable="false"
                                                                             prefWidth="50.0" sortable="false"
                                                                             text="Height"/>
                                                            </columns>
                                                            <columnResizePolicy>
                                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                            </columnResizePolicy>
                                                        </TableView>
                                                    </center>
                                                    <bottom>
                                                        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0"
                                                              spacing="5.0" BorderPane.alignment="CENTER">
                                                            <children>
                                                                <TextField fx:id="tfFind" onAction="#handleAction"
                                                                           prefWidth="200.0"/>
                                                                <Button fx:id="btnFind" mnemonicParsing="false"
                                                                        onAction="#handleAction" text="Find">
                                                                    <tooltip>
                                                                        <Tooltip
                                                                                text="Find Box with Character(s) or Coordinates (x1 y1 x2 y2)"/>
                                                                    </tooltip>
                                                                </Button>
                                                            </children>
                                                        </HBox>
                                                    </bottom>
                                                </BorderPane>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab text="Box 数据">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <TextArea fx:id="taBoxData" editable="false" prefHeight="475.0"
                                                          prefWidth="316.0" AnchorPane.bottomAnchor="0.0"
                                                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                          AnchorPane.topAnchor="0.0"/>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                                <Tab fx:id="tabBoxView" text="Box 试图">
                                    <content>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                            <children>
                                                <BorderPane prefHeight="275.0" prefWidth="236.0"
                                                            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <center>
                                                        <StackPane fx:id="stackPaneBoxView"
                                                                   BorderPane.alignment="CENTER">
                                                            <children>
                                                                <ImageView fx:id="charImageView" fitHeight="200.0"
                                                                           fitWidth="200.0" pickOnBounds="true"/>
                                                                <Rectangle fx:id="charRectangle" fill="TRANSPARENT"
                                                                           height="200.0" stroke="GREEN"
                                                                           strokeType="INSIDE" strokeWidth="0.5"
                                                                           width="200.0"/>
                                                            </children>
                                                        </StackPane>
                                                    </center>
                                                    <top>
                                                        <VBox BorderPane.alignment="CENTER">
                                                            <children>
                                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                                    <children>
                                                                        <Label text="Char/Codepoint:"/>
                                                                        <TextField fx:id="tfChar" editable="false"
                                                                                   prefWidth="40.0"
                                                                                   style="-fx-focus-color: transparent;"/>
                                                                        <TextField fx:id="tfCodepointValue"
                                                                                   editable="false" prefWidth="100.0"
                                                                                   style="-fx-focus-color: transparent;"/>
                                                                    </children>
                                                                    <padding>
                                                                        <Insets left="10.0" top="10.0"/>
                                                                    </padding>
                                                                </HBox>
                                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                                    <children>
                                                                        <Label text="Margins"/>
                                                                        <Spinner fx:id="spnMargins" prefWidth="70.0">
                                                                            <valueFactory>
                                                                                <SpinnerValueFactory.IntegerSpinnerValueFactory
                                                                                        initialValue="3" max="20"
                                                                                        min="0"/>
                                                                            </valueFactory>
                                                                        </Spinner>
                                                                        <Label text="Scales"/>
                                                                        <Spinner fx:id="spnScales" prefWidth="70.0">
                                                                            <valueFactory>
                                                                                <SpinnerValueFactory.IntegerSpinnerValueFactory
                                                                                        initialValue="4" max="10"
                                                                                        min="1"/>
                                                                            </valueFactory>
                                                                        </Spinner>
                                                                    </children>
                                                                    <padding>
                                                                        <Insets left="10.0" top="10.0"/>
                                                                    </padding>
                                                                </HBox>
                                                            </children>
                                                        </VBox>
                                                    </top>
                                                    <bottom>
                                                        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                                                            <children>
                                                                <Pagination fx:id="paginationBox" disable="true"
                                                                            maxPageIndicatorCount="5"/>
                                                            </children>
                                                        </HBox>
                                                    </bottom>
                                                </BorderPane>
                                            </children>
                                        </AnchorPane>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <ScrollPane fx:id="scrollPaneImage" layoutY="-1.0" prefHeight="500.0" prefWidth="596.0"
                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="-1.0">
                            <content>
                                <ImageCanvas fx:id="imageCanvas"/>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label/>
                <Label fx:id="labelPageNbr" text="Page:">
                </Label>
                <Pagination fx:id="paginationPage" maxPageIndicatorCount="1" prefWidth="150.0">
                    <padding>
                        <Insets bottom="5.0"/>
                    </padding>
                </Pagination>
            </children>
            <padding>
                <Insets bottom="5.0" top="5.0"/>
            </padding>
        </HBox>
    </bottom>
</BorderPane>
